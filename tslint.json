{
  "extends": [
    "tslint:latest",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ],
    "no-implicit-dependencies": false,
    "interface-name": false,
    "no-console": [true, "log", "error"],
    "object-literal-sort-keys": false,
    "no-var-requires": false,
    "no-submodule-imports": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules",
      "**/*.d.ts",
      "**/*.css"
    ]
  }
}
