{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "version": {
      "message": "build: publish"
    },
    "publish": {
      "conventionalCommits": true,
      "access": "public",
      "npmClient": "yarn",
      "allowBranch": ["master", "test"]
    }
  }
}
