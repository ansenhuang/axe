{
  "name": "axe",
  "version": "1.0.0",
  "description": "A series of libraries with typescript.",
  "author": "ansenhuang <ancheng1992@126.com>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "scripts": {
    "commit": "git-cz",
    "prebuild": "run-p lint",
    "build": "lerna exec --parallel 'NODE_ENV=production babel src --root-mode upward --out-dir lib --source-maps --extensions .ts --delete-dir-on-start --no-comments'",
    "build:declarations": "lerna exec --parallel 'tsc --build tsconfig.prod.json'",
    "postbuild": "yarn build:declarations",
    "test": "jest",
    "fix": "run-p -c 'lint:ts-* --fix'",
    "lint:css": "stylelint 'packages/**/*.ts'",
    "lint:ts-prod": "tslint --config tslint.prod.json 'packages/**/*.ts'",
    "lint:ts-test": "tslint --config tslint.test.json 'packages/**/*.test.ts'",
    "lint:ts": "run-p -c lint:ts-*",
    "lint": "run-p -c lint:*",
    "prerelease": "yarn build",
    "release": "lerna publish"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.13",
    "babel-core": "7.0.0-bridge.0",
    "commitizen": "^3.1.1",
    "cz-lerna-changelog": "^2.0.2",
    "jest": "^24.8.0",
    "lerna": "^3.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "semantic-release": "^15.13.12",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
