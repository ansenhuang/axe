{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "rootDir": "./",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
      "definitions"
    ],
    "paths": {
      "@axe/*": ["packages/*/src"],
      "*": ["node_modules"]
    }
  },
  "include": ["packages/**/src", "examples"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
