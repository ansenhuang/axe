{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@axe/*": ["packages/*/src"],
      "*": ["node_modules"]
    }
  },
  "files": [
    "./definitions/index.d.ts"
  ],
  "include": [
    "packages/**/src",
    "tests",
    "examples"
  ]
}
